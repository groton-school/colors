    "@types/tinycolor2": "^1.4.6",
    "change-case-all": "^2.1.0",
    "commit-and-tag-version": "^12.5.1",
    "del-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "tinycolor2": "^1.6.0",
    "typescript": "^5.8.3"
